<div class="container">

  <div class="row">

    <% @pubs.each do |pub| %>
      <div class="card m-2 "  style="width: 20rem;">

       <div class="card-body bg-light">
          <h4 class="card-title text-dark pl-2"><%= pub.name %></h4>
          <h6 class="card-subtitle mb-3 pl-3 "><%= pub.address %></h6>
          <p class="pl-3"><%= pub.user.email %></p>

          <div class="card-footer text-muted bg-white">
            <span><%= link_to "More info", pub_path(pub) %></span>
            <span class="mx-2"><%= link_to "Edit", edit_pub_path(pub), class: "text-warning"  %></span> 
            <span class="mx-2"><%= link_to "Delete", pub_path(pub), method: :delete, data: { confirm: 'Deleting. Are you sure?'}, class: "text-danger"  %></span> 
          </div>

        </div>

      </div>
    <% end %>

  </div>
  <%= link_to "Add a Pub", new_pub_path  %>
</div>